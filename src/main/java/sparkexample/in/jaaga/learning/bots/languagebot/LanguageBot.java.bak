public class LanguageBot extends Bot {
    Mission mission;

    public void init() {
        //StringUtil.setResources(getResources());
        mission = new Mission(sender);
        //nouns
        mission.add(new ProblemSkill(this, "language title",  new Noun("hello"), 10, 100));
        mission.add(new ProblemSkill(this, "language title", new Noun("hello"), 7, 100));
        mission.add(new ProblemSkill(this, "language title", new Noun("hello"), 4, 100));
    } 
    public void onStart() {
        super.onStart();
        init();
        sender.send(new ChatItem("hello world"));
        sender.send(mission.getPrompt());
    }

    public void onMessageReceived(String text) {
        mission.processResponse(text);
        sender.send(mission.getPrompt());
    }

